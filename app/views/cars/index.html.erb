<h1> Cars <h1>

<table class="table table-bordered" >
  <thead class="table-dark">
    <tr>
      <th scope='col'>Vendor</th>
      <th scope='col'>Car_Name</th>
      <th scope='col'>Model</th>
      <th scope='col'>Engine_Capacity</th>
      <th scope='col'>Millage</th>
      <th scope='col'>Category</th>
      <th scope='col'>Color</th>
      <th scope='col'>Price</th>
      <th scope='col'>Description</th>
      <th scope='col'>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @cars.each do |car| %>
    <tr>
      <td><%= car.vendor %></td>
      <td><%= car.car_name %></td>
      <td><%= car.model %></td>
      <td><%= car.engine_capacity %></td>
      <td><%= car.millage %></td>
      <td><%= car.category %></td>
      <td><%= car.color %></td>
      <td><%= car.price %></td>
      <td><%= car.description %></td>
      <td><%= link_to "Show", car_path(car), class: "btn btn-secondary" %>
       <%= link_to "Edit", edit_car_path(car), class:"btn btn-secondary" %>
       <%= link_to "Destroy", car_path(car), data: { "turbo-method": :delete }, class:"btn btn-secondary" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New car", new_car_path, class: "btn btn-primary" %>
