<div class="like">
  <% pre_like = @car.likes.find { |like| like.user_id == current_user.id} %>
  <% if pre_like %>
    <%= button_to car_like_path(@car, pre_like), method: :delete, remote: true, data: { turbo: false }  do %>
      <i class="fa fa-thumbs-down" aria-hidden="true"></i>
    <% end %>
  <% else %>
    <%= button_to car_likes_path(@car), method: :post, remote: true, data: { turbo: false }  do %>
      <i class="fa fa-thumbs-up" aria-hidden="true"></i>
    <% end %>
  <% end %>
</div>
<p><%= @car.likes.count %> <%= (@car.likes.count) == 1 ? 'Like' : 'Likes'%></p>
