<%= form_for(@car, url: cars_path) do |f| %>
  <form class="row g-3">
    <h1> Add Details <h1>
    <div class="form-group">
      <%= f.label :vendor %>
     <%= f.select :vendor, ['Toyoya', 'Honda', 'Suzuki', 'Tesla', 'Mercedes', 'BMW'] %>
    </div>

    <div class="form-group">
      <%= f.label :car_name %>
      <%= f.text_field :car_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :model %>
      <%= f.text_field :model, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :engine_Capacity %>
      <%= f.text_field :engine_capacity, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :millage %>
      <%= f.text_field :millage, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <%= f.text_field :category, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :color %>
      <%= f.text_field :color, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
    </div>
    <br>
    <div class="form-group">
      <%= f.submit 'Next Step'%>  
    </div>
  </form>
<% end %>
