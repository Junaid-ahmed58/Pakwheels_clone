<%= form_for(@car, url: cars_path) do |f| %>
  <h1> Add Details </h1>
  <div class="row">
    <div class="form-group">
      <%= f.label :vendor , style: "display: block"%>
      <%= f.select :vendor, Car::VENDOR_NAMES , class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :car_name, style: "display: block" %>
      <%= f.text_field :car_name, class: "form-control", required: true %>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :model, style: "display: block" %>
        <%= f.text_field :model, class: "form-control", required: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :engine_Capacity, style: "display: block" %>
        <%= f.text_field :engine_capacity, class: "form-control", required: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :millage, style: "display: block" %>
        <%= f.text_field :millage, class: "form-control", required: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :category, style: "display: block" %>
        <%= f.text_field :category, class: "form-control", required: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :color, style: "display: block" %>
        <%= f.text_field :color, class: "form-control", required: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :price, style: "display: block" %>
        <%= f.text_field :price, class: "form-control", required: true %>
      </div>
    </div>
  </div>

    <br>
    <div class="form-group">
      <%= f.submit 'Next Step', class: "btn btn-secondary" %>  
    </div>
  </div>
<% end %>
