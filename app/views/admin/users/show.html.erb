<div class="container">
  <div class="jumbotron">
    <h1 class="display-4"> 
      <%= @user.first_name %>
      <%= @user.last_name %>
    </h1>
    <p class="lead">
      <%= @user.email %> |
      <%= @user.role %> |
      <%= @user.status%>
    </p>
    <p class="lead">
      <%= @user.states%>
      <%=@user.cities%>
    </p>
    <br>
    <hr class="my-4">
    <%= link_to "Back to users", admin_users_path, class:"btn btn-secondary" %>
    <%= button_to admin_user_path(@user), method: :delete, class: "btn btn-danger" do %>
      <i class="fa-solid fa-trash"></i>Delete
    <% end %>
  </div>
  <hr>
</div>
<div class="container">
  <h1> User Cars: </h1>
  <%= render 'shared/cars', locals: { cars: @cars } %>
</div>
